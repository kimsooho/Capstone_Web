<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.capstone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ChannelListActivity"></activity>
        <activity android:name=".Activity.WaitingActivity"></activity>
        <activity android:name=".Activity.ConferenceActivity"></activity>
        <activity android:name=".Activity.NoteActivity"></activity>
        <activity android:name=".Activity.CloseActivity"></activity>
        <activity android:name=".Activity.JoinActivity"></activity>
        <activity android:name=".Activity.MakeChannelActivity"></activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>
